{
    "manifest_version": 2,
    "name": "Water Reminder",
    "version": "1.0.4",
    "description": "The Alarm plays every 30 minutes for you to drink water",
    "author": "matsuoshi",
    "homepage_url": "https://github.com/hamzatatheer/WaterReminderChromeExtension",
    "permissions": ["alarms","storage"],
    "background": {
      "scripts": ["water_alarm.js"]
    },
    "browser_action":{
      "default_popup":"popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      },
      "default_title": "toggle to view progress"
    },
    "icons": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  }